<p id="notice"><%= notice %></p>

<h1>Address Details</h1>


<table class="table table-success table-striped">
  <thead>
    <tr>
      <th>Pickup address</th>
      <th>Delivery address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @details.each do |detail| %>
      <tr>
        <td><%= detail.pickup_address %></td>
        <td><%= detail.delivery_address %></td>
        <td><%= link_to 'Show', detail, class:"btn btn-outline-secondary" %></td>
        <td><%= link_to 'Edit', edit_detail_path(detail) , class:"btn btn-outline-secondary"%></td>
        <td><%= link_to 'Delete', detail, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-secondary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add New Address', new_detail_path, class:"btn btn-info" %>
<h3>or </h3>
<%= link_to 'confirm ', confirm_path, class:"btn btn-info" %>
