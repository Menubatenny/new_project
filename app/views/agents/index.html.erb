<p id="notice"><%= notice %></p>

<h1>Agents</h1>

<table class="table table-success table-striped">
  <thead>
    <tr>
      <th>Agent name</th>
      <th>Phone number</th>
      <th>Delivery status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @agents.each do |agent| %>
      <tr>
        <td><%= agent.agent_name %></td>
        <td><%= agent.phone_number %></td>
        <td><%= agent.delivery_status %></td>
        <td><%= link_to 'Show', agent , class:"btn btn-outline-secondary"%></td>
        <td><%= link_to 'Update', edit_agent_path(agent) , class:"btn btn-outline-secondary"%></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add new', new_agent_path, class:"btn btn-info"  %>
<%= link_to 'Back', finals_path, class:"btn btn-info"  %>
